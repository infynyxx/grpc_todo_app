# http://EditorConfig.org

root = true

[*]
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 4
continuation_indent_size = 8

[*.java]
indent_size = 2

[*.{js,jsx,tsx}]
indent_style = space
indent_size = 2

[*.{yml, yaml}]
indent_size = 2

[*.{ts, }]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
